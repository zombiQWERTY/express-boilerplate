    "scripts": {
        "start": "yarn compile && cross-env NODE_ENV=production node ./dist/src",
        "startProd": "yarn compile && cross-env NODE_ENV=production pm2 start pm2.ecosystem.config.json",
        "compile": "yarn && yarn clearDist && yarn babel && yarn copyScriptsData && yarn removeDev && yarn compileFront",
        "compileFront": "yarn copyFrontend",
        "dev": "cross-env NODE_ENV=development nodemon -L ./src/index_dev.js 0.0.0.0 --protocol='http' --domain='localhost' --port=3000 --startport=3000",
        "apidoc": "apidoc -i ./src/server/routes -o ./doc",
        "test": "mocha ./test --require=env-test --timeout=20000",
        "babel": "babel ./src/ -d ./dist/src && babel ./scripts/ -d ./dist/scripts",
        "copyScriptsData": "cp -r ./data ./dist/data",
        "copyFrontend": "mkdir ./dist/frontend && cp -r ./frontend/public ./dist/frontend/public && cp -r ./frontend/views ./dist/frontend",
        "removeDev": "rm ./dist/src/index_dev.js",
        "clearDist": "rimraf ./dist"
    }
}
